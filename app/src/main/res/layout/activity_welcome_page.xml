<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:background="@drawable/welcomepage_bg"
    tools:context=".AsssessorAttendance.Welcome_page">



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Welcome"
            android:layout_weight="1"
            android:textSize="36sp"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Vipin Rai"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="#030900"
            android:textSize="30sp" />

    <!--<com.hanks.htextview.typer.TyperTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textView2"
        android:layout_weight="1"
        android:textSize="36sp"
        android:text="Vipin Rai"
        android:layout_margin="10dp"
        app:charIncrease="3"
        app:typerSpeed="80"/>
    -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="10dp"
            android:text="Mark Your Attendance on the next page and kindly follow the instructions to start the viva."
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:inner_text="SWIPE TO BEGIN"
        android:layout_margin="10dp"
        app:inner_text_color="@android:color/white"
        app:inner_text_size="16sp"
        app:inner_text_top_padding="18dp"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_background="@drawable/shape_rounded"
        app:button_image_height="60dp"
        app:button_image_width="100dp"
        app:button_image_disabled="@drawable/icarrow"
        app:button_image_enabled="@drawable/icarrow"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:button_bottom_padding="20dp"
        app:button_background="@drawable/shape_button"
        app:initial_state="disabled"
        app:has_activate_state="false"
        />



</LinearLayout>