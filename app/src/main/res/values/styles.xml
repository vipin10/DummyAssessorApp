<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorProgressBar</item>
    </style>

    <style name="Apptheme2" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/lightbluee</item>
    <item name="colorPrimaryDark">@color/lightbluee</item>
    <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="alertDialogstyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="accountnameStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:gravity">center|end</item>
    </style>

    <style name="locationStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
